<div class="col-lg-12">
  <%= form_for @query, url: {action: 'update'} do |f| %>
    <div class="form-group">
      <%= f.label 'name', 'Name' %>
      <%= f.text_field 'name', class: 'form-control' %>
      <%= f.label 'query_string', 'Query string' %>
      <%= f.text_area :query_string, rows: 10, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.check_box :filter %>
      <%= f.label 'Filter documents that were processed by other queries?' %>
    </div>
    <div class="form-group">
      <%= f.button 'Save', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
